# EditorConfig helps maintain consistent coding styles between editors and IDEs
# https://editorconfig.org/

root = true

# ----------------------------------
# Default configuration
# ----------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# ----------------------------------
# Go files (.go)
# Go tooling and `gofmt` enforce tabs, not spaces.
# We'll honor that here to avoid unnecessary diffs.
# ----------------------------------
[*.go]
indent_style = tab
indent_size = 8

# ----------------------------------
# YAML / JSON / TOML / Markdown / MDX
# Prettier-style: 2 spaces, LF, final newline
# ----------------------------------
[*.{yml,yaml,json,toml,md,mdx}]
indent_style = space
indent_size = 2

# ----------------------------------
# Makefiles â€” tabs required for commands
# ----------------------------------
[Makefile]
indent_style = tab

# ----------------------------------
# Shell scripts
# ----------------------------------
[*.sh]
indent_style = space
indent_size = 2

# ----------------------------------
# Markdown: don't trim trailing whitespace (used for line breaks)
# ----------------------------------
[*.md]
trim_trailing_whitespace = false
